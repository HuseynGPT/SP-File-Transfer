<Window x:Class="File_Transfer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_Transfer.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment ="Center" HorizontalAlignment="Center">
            <TextBlock Margin="10 0 0 0" Text="From" Height="20"/>
            <TextBox Margin="20 0 0 0" Width="300" Height="20"/>
            <Button Content="File...." Margin="10 0 0 0" Width="70"/>
        </StackPanel>
        <StackPanel Margin="0 70 0 0" Orientation="Horizontal" VerticalAlignment ="Center" HorizontalAlignment="Center">
            <TextBlock  Text="To" Height="20"/>
            <TextBox Margin="20 0 0 0" Width="300" Height="20"/>
            <Button Content="File...." Margin="10 0 0 0" Width="70"/>

        </StackPanel>

    </Grid>
</Window>
